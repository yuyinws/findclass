<!--miniprogram/pages/recommend/recommend.wxml-->
<text>miniprogram/pages/recommend/recommend.wxml</text>
<van-tabbar active="{{ active }}" bind:change="onChange">
  <van-tabbar-item name="search" icon="search">课程查询</van-tabbar-item>
  <van-tabbar-item name="recommend" icon="good-job-o">课程推荐</van-tabbar-item>
  <van-tabbar-item name="market" icon="balance-pay">交易市场</van-tabbar-item>
  <van-tabbar-item name="personal" icon="user-o">个人主页</van-tabbar-item>
</van-tabbar>
<view>
<wux-sticky scrollTop="{{ scrollTop }}">
    <wux-sticky-item>

      <view slot="title">

        <view>
          <van-search value="{{ value }}" placeholder="搜索你想找的书籍" use-action-slot bind:change="onChange" bind:search="onSearch" leftIcon="search" custom-class="searchStyle">
            <view slot="action" bind:tap="onClick">搜索</view>
          </van-search>
        </view>
        <view style="width:103%">
          <van-tabs bind:click="changeTabs" animated active="selectedTabs">
            <van-tab title="闲置"></van-tab>
            <van-tab title="求购"></van-tab>
          </van-tabs>
        </view>
      </view>

      <view slot="content" class="contentStyle">
        <view class="infoStyle" wx:for="{{sellList}}" style="{{selectedTab==0?'display:block':'display:none'}}">
          <view class="outerCard">
            <view>
              <image class="bookImg" src="{{item.imgList[0].url}}"></image>
            </view>
            <view class="title">{{item.bookName}}</view>
            <view class="author">{{item.author}}</view>
            <view class="press">{{item.press}}</view>
            <view class="price">￥{{item.sellPrice}}</view>
            <view class="discount">-{{item.discount}}%</view>
          </view>
        </view>
        <view class="infoStyle" style="{{selectedTab==1?'display:block':'display:none'}}" wx:for="{{wantedlist}}">{{item}}</view>
      </view>
      
    </wux-sticky-item>
  </wux-sticky>
  </view>